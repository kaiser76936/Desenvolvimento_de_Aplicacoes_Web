{
  "compilerOptions" : {
    "esModuleInterop" : true,
    "sourceMap" : true,
    "noImplicitAny" : false,
    "module" : "commonjs",
    "target" : "es6",
    "lib" : [ "es2015", "es2017", "dom" ],
    "removeComments" : true,
    "jsx" : "react",
    "allowJs" : true,
    "baseUrl" : "./",
    "paths" : { "components/*" : [ "src/components/*" ] },
    "outDir": "./dist" // Add this line to specify the output directory
  },
  "include": [
    "src/**/*" // Ensure that only your source files are included
  ],
  "exclude": [
    "node_modules", // Exclude node_modules
    "dist" // Exclude the output directory to avoid conflicts
  ]
}